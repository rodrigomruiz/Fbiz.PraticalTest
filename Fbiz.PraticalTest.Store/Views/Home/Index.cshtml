@model PagedList.IPagedList<Fbiz.PraticalTest.Store.ViewModels.ProductViewModel>
@using PagedList.Mvc

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Home Page";
}

<div >
    <h3>Produtos Ativos</h3>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nome")
        </th>
        <th>
            @Html.DisplayName("Descrição")
        </th>
        <th>
            @Html.DisplayName("Categoria")
        </th>
        <th>
            @Html.DisplayName("Data Cadastro")
        </th>
        <th>
            @Html.DisplayName("Ativo")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "GetProductComments", "Products", new { id = item.ProductId }, null)
            </td>
            <td>
                <div>@Html.Raw(item.Description)</div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            
        </tr>
    }
</table>

Página @Model.PageNumber de @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))